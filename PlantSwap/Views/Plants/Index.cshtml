@{
  Layout = "_Layout";
}

@using PlantSwap.Models;
@model List<PlantSwap.Models.Plant>;

<h1>Plants</h1>

@if (@Model.Count == 0)
{
  <h3>No plants have been added yet!</h3>
} 

@foreach (Plant plant in Model)
{
  <li>@Html.ActionLink($"{plant.CommonName}", "Details", new { id = plant.PlantId })</li>
}

<p>@Html.ActionLink("Add new plant", "Create")</p>