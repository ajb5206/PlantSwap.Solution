@{
  Layout = "_Layout";
}

@using PlantSwap.Models;
@model List<PlantSwap.Models.Plant>;

<h1>The Plants</h1>
<hr />

@if (@Model.Count == 0)
{
  <h3>No plants have been added yet!</h3>
} 

@foreach (Plant plant in Model)
{
  <p>@Html.ActionLink($"{plant.CommonName}", "Details", new { id = plant.PlantId })</p>
}