@{
  Layout = "_Layout";
}

@model PlantSwap.Models.Plant

<h2>Add a request</h2>

<h4>Add a request to @Html.DisplayFor(model => model.CommonName)</h4>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.PlantId)

  @Html.Label("Select trader")
  @Html.DropDownList("traderId", new SelectList(@ViewBag.Traders, "TraderId", "TraderHandle"), new { @class = "form" })
  <br>

	@Html.Label("Listing Date")
	@Html.TextBox("listingDate")
  <br>

	@Html.Label("What plant would you trade for this?")
	@Html.DropDownList("exchangeId", new SelectList(@ViewBag.Plants, "PlantId", "CommonName"), new { @class = "form" })
  <br>

  @Html.Label("Is this a cutting?")
  @Html.CheckBox("isCutting", false, new { @class = "form" })
  <br>

	@Html.Label("What is the max distance you are willing to travel?")
	@Html.TextBox("maxDistance")
  <br>

  <input type="submit" value="Save" />
} 
<hr>
<p>@Html.ActionLink("Create new plant", "Create", "Plants")</p>