@{
  Layout = "_Layout";
}

@model PlantSwap.Models.Plant

<h2>Add an offer</h2>

<h4>Add an offer to @Html.DisplayFor(model => model.CommonName)</h4>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.PlantId)

  @Html.Label("Select trader")
  @Html.DropDownList("traderId", new SelectList(@ViewBag.Traders, "TraderId", "TraderHandle"))

  @Html.Label("Is this a cutting?")
  @Html.CheckBox("isCutting", false)

	@Html.Label("Listing Date")
	@Html.TextBox("listingDate")

	@Html.Label("What plant will you accept for this?")
	@Html.DropDownList("exchangeId", new SelectList(@ViewBag.Plants, "PlantId", "CommonName"))

	@Html.Label("Would you accept an imperfect match?")
	@Html.CheckBox("imperfectMatch", false)

	@Html.Label("What is the max distance you are willing to travel?")
	@Html.TextBox("maxDistance")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Create new plant", "Create", "Plants")</p>