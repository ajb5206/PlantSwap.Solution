@{
  Layout = "_Layout";
}

@using PlantSwap.ViewModels

@model RegisterViewModel

<h2>Register a new user</h2>
<hr />

<div class="form-entry">
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  @Html.LabelFor(user => user.Email)
  @Html.TextBoxFor(user=> user.Email, new { @class = "form" })

  @Html.LabelFor(user => user.UserName, new { @class = "label" })
  @Html.TextBoxFor(user => user.UserName, new { @class = "form" })

  <p> * Passwords must contain at least six characters, a capital letter, a lowercase letter, a digit, and a special character </p>

  @Html.LabelFor(user=> user.Password)
  @Html.PasswordFor(user=> user.Password, new { @class = "form" })

  @Html.LabelFor(user=> user.ConfirmPassword, new { @class = "label" })
  @Html.PasswordFor(user=> user.ConfirmPassword, new { @class = "form" })

  <input type="submit" class="button" value="Register" />
}
</div>