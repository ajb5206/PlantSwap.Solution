@{
    Layout = "_Layout";
    ViewData["Title"] = "Home Page";
}

@using PlantSwap.Models;
@using System.Collections.Generic;
@using System.Linq;

<h1>Welcome to Plant Swap</h1>
<hr />

<p>Step 1: Create an account and log in</p>
<p>Step 2: Explore the plants and traders</p>
<p>Step 3: If needed add the plants you have to offer and the plants you want to request to the database</p>
<p>Step 4: Add your offers and requests - you may add them from either your trader profile or from the plants themselves (be sure to select your own Handle when adding a request or offer to a plant)</p>
<p>Step 5: Contact other traders with compatible offers or requests and trade some plants!

<hr />
<div class="home-background">
<h2>The Plants</h2>

@if (@Model["Plants"].Count == 0)
{
  <h4>No plants have been added yet!</h4>
} 
else
{
  @foreach (Plant plant in @Model["Plants"])
    {
      <p>@Html.ActionLink($"{plant.CommonName}", "Details", "Plants", new { id = plant.PlantId })</p>
    }

}
</div>