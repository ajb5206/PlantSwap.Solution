@{
  Layout = "_Layout";
}

@model PlantSwap.Models.Trader

<h2>Add a request</h2>

<h4>Add a request from @Html.DisplayFor(model => model.TraderHandle)</h4>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TraderId)

  @Html.Label("Select plant")
  @Html.DropDownList("plantRequestedId", new SelectList(@ViewBag.Plants, "PlantId", "CommonName"), new { @class = "form" })
  <br>
  @Html.Label("Is this a cutting?")
  @Html.CheckBox("isCutting", false, new { @class = "form" })
  <br>
	@Html.Label("Listing Date")
	@Html.TextBox("listingDate", "", new { @class = "form" })
  <br>
	@Html.Label("What plant would you trade for this?")
	@Html.DropDownList("exchangeId", new SelectList(@ViewBag.Plants, "PlantId", "CommonName"), new { @class = "form" })
  <br>
	@Html.Label("Would you accept an imperfect match?")
	@Html.CheckBox("imperfectMatch", false, new { @class = "form" })
  <br>
	@Html.Label("What is the max distance you are willing to travel?")
	@Html.TextBox("maxDistance", "", new { @class = "form" })
  <br>
  <input type="submit" value="Save" />
}
<hr>
<p>@Html.ActionLink("Create new plant", "Create", "Plants")</p>